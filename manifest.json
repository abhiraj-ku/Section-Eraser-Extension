{
  "manifest_version": 3,
  "name": "Website Section Toggle",
  "version": "1.0",
  "description": "An extension to hide or show sections of a website",
  "permissions": ["tabs", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
